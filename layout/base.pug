doctype html
html
  head
    block site_head
      include _partial/head.pug
  block site_body
    body(itemscope='' itemtype='http://schema.org/WebPage' lang=page.lang)
      header#header.clearfix
        block site_header
          include _partial/header.pug
      #body
        .container
          .row
            #main.col-mb-12.col-8(role='main')
              block site_content
            #secondary.col-mb-12.col-offset-1.col-3.kit-hidden-tb(role='complementary')
              block site_widgets
                include _partial/widgets.pug
      footer#footer
        block site_footer
          include _partial/footer.pug
      include _partial/after_footer.pug
